<plugin>
  <groupId>com.github.searls</groupId>
  <artifactId>jasmine-maven-plugin</artifactId>
  <!-- Use the latest plugin version here -->
  <version>1.0.2-SNAPSHOT</version>
  <executions>
    <execution>
      <goals>
        <!-- This goal generates HTML pages used for manual testing -->
        <goal>generateManualRunner</goal>
        <goal>resources</goal>
        <goal>testResources</goal>
        <goal>test</goal>
      </goals>
    </execution>
  </executions>
  <configuration>
    <!-- JavaScript source folder relative to project root -->
    <jsSrcDir>./js</jsSrcDir>
    <!-- Jasmine Spec source folder relative to project root -->
    <jsTestSrcDir>./spec</jsTestSrcDir>
    <!-- Files specified here will be pre-loaded on every HTML file generated by plugin-->
    <preloadSources>
      <source>stub/ts.js</source>
      <source>stub/ts2.js</source>
    </preloadSources>
    <!-- Postfix for Spec files - HTML page is generated for every Spec file. Default is spec.js-->
    <specFilePostfix>spec.js</specFilePostfix>
  </configuration>
</plugin>